<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!-- File Tags Tree view  -->
	<record id="file_tags_tree_view" model="ir.ui.view">
		<field name="name">file.tags.tree.view</field>
		<field name="model">file.tags</field>			
		<field name="arch" type="xml">
			<tree string="File Tags">
				<field name="name"/>
			</tree>
		</field>
	</record>

	<!-- File Tags Form View -->
	<record id="file_tags_form_view" model="ir.ui.view">
		<field name="name">file.tags.form.view</field>
		<field name="model">file.tags</field>			
		<field name="arch" type="xml">				
			<form string="File Tags">
				<sheet>
					<group>
						<group>
							<field name="name"/>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<!-- File Tags Action -->
	<record id="file_tags_action" model="ir.actions.act_window">
        <field name="name">File Tags</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">file.tags</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Directory Tags Tree view  -->
	<record id="directory_tags_tree_view" model="ir.ui.view">
		<field name="name">directory.tags.tree.view</field>
		<field name="model">directory.tags</field>			
		<field name="arch" type="xml">
			<tree string="Directory Tags">
				<field name="name"/>
			</tree>
		</field>
	</record>

	<!-- Directory Tags Form View -->
	<record id="directory_tags_form_view" model="ir.ui.view">
		<field name="name">directory.tags.form.view</field>
		<field name="model">directory.tags</field>			
		<field name="arch" type="xml">				
			<form string="Directory Tags">
				<sheet>
					<group>
						<group>
							<field name="name"/>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<!-- Directory Tags Action -->
	<record id="directory_tags_action" model="ir.actions.act_window">
        <field name="name">Directory Tags</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">directory.tags</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>